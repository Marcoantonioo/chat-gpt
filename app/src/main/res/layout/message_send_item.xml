<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimen_8">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32"
        android:paddingStart="@dimen/dimen_8"
        android:paddingTop="@dimen/dimen_4"
        android:paddingEnd="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_4"
        android:textColor="#C0C0C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="June 10" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#774df2"
        app:cardCornerRadius="@dimen/dimen_12"
        app:cardElevation="@dimen/dimen_0"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDate">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8"
                android:maxWidth="@dimen/dimen_260"
                android:paddingLeft="@dimen/dimen_12"
                android:paddingTop="@dimen/dimen_8"
                android:paddingRight="@dimen/dimen_12"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_size_large"
                tools:text="This is a Message" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_8"
        android:textColor="#C0C0C0"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewText"
        app:layout_constraintEnd_toStartOf="@+id/cardViewText"
        tools:text="10:00" />


</androidx.constraintlayout.widget.ConstraintLayout>